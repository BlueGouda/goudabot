#! /usr/bin/python

import socket
import sys

PORT = 50007              # The same port as used by the server

def send(command):
    HOST = 'localhost'    # The remote host
    s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    s.connect((HOST, PORT))
    s.sendall(command)
    data = s.recv(1024)
    s.close()
    print repr(data)


if __name__ == '__main__':
    send(sys.argv[1:])
